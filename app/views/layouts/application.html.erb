  <script type="text/javascript">
    $(document).ready(function(){
      // simple jRating call
      $('.basic').jRating({
        length : 5,
        decimalLength : 5
      });

      <% if session[:show_rating] == true %>
          setTimeout(function(){
            if ($(".rating")) {
              $(".rating").slideDown('slow');  
            }
          }, 2000);
      <% end %>

    });
  </script>

