  <script type="text/javascript" >
    hljs.tabReplace = ' ';
    hljs.initHighlightingOnLoad();
  </script>

  <script type="text/javascript">
    $(document).ready(function(){
      // simple jRating call
      $('.basic').jRating({
        length : 5,
        decimalLength : 5
      });
    });
  </script>

</head>
<body>
  <!-- Header -->
  <%= render 'header' %>

  <div class="maincontent">
    <!-- Navigation -->
    <%= render 'navigation' %>
    
    <!-- Content -->
    <div class="content">
      <div class="section-content">
        <% if !@pages_path.nil? %>
          <% if @pages_path.size > 1 %>
            <div class="pages-path">
              <% count = 0 %>
              <% @pages_path.each do |page| %>
                <div class="pages-path-item">
                  <% if count == 0 %>
                    &nbsp;&nbsp;<%= link_to page[0], root_path  %> 
                  <% elsif count == @pages_path.size - 1 %>
                    <%= page[0] %>
                  <% else %>
                    <%= link_to page[0], root_path + "guides/#{page[1]}" %>
                  <% end %>
                </div>

                <% if count != @pages_path.size - 1 %>
                  <div class="pages-path-item" style="padding-top: 6px; height: 16px">
                    <i class="icon-chevron-right"></i>
                  </div>
                <% end %>
                
              <% count += 1 %>
              <% end %>
              <div class="separator"></div>
            </div>
          <% end %>  
        <% end %>
        <%= yield %>
      </div>
      
    </div>  
  </div>

  <!-- Footer -->
  <%= render 'footer' %>

  <%= render 'rating' %>

  <%# render 'chat/chat' %>

  <script type="text/javascript">
    jQuery(function($){
      $(".navigation").css("height", $(".maincontent").css("height"));   
    });
  </script>

  <% if session[:show_rating] == true %>
    <script type="text/javascript">
      setTimeout(function(){
        if ($(".rating")) {
          $(".rating").slideDown('slow');  
        }
        
      }, 2000);
    </script>
  <% end %>

</body>
</html>
