  <!-- RATING -->
  <%= render 'rating' %>

  <script type="text/javascript">
    jQuery(function($){
      $(".navigation").css("height", $(".maincontent").css("height"));   
      $(".rightmenu").css("height", $(".maincontent").css("height"));   
    });
  </script>

  <% if session[:show_rating] == true %>
    <script type="text/javascript">
      setTimeout(function(){
        if ($(".rating")) {
          $(".rating").slideDown('slow');  
        }
      }, 2000);
    </script>
  <% end %>

